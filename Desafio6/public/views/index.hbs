<h1>Formulario de Productos</h1>
<form onsubmit="return addProduct(this)">
    <div class="mb-3 m-3">
        <label for="name" class="form-label">Nombre: </label>
        <input name="name" id="name" type="text" class="form-control">
    </div>
    <div class="mb-3 m-3">
        <label for="price" class="form-label">Precio: </label>
        <input name="price" id="price" type="number" class="form-control">
    </div>
    <div class="mb-3 m-3">
        <label for="thumbnail" class="form-label">Imagen URL: </label>
        <input name="thumbnail" id="thumbnail" type="text" class="form-control">
    </div>
        
    <input type="submit" value="Agregar" class="m-3 btn btn-primary">
    <table class="table m-3">
        <tr>
            <th>NOMBRE</th>
            <th>PRECIO</th>
            <th>IMAGEN</th>    
        </tr>
        <tbody id="products">
            <td>Empty</td>
            <td>Empty</td>
            <td>Empty</td>
        </tbody>
    </table>    
</form>


